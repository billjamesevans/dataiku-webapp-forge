@import '/static/public/styles/1.0.0/variables.css';

:root {
  --bg: var(--dku-bg-color, #f7f8fa);
  --surface: var(--dku-surface-color, #ffffff);
  --border: var(--dku-border-color, #e5e7eb);
  --text: var(--dku-text-color, #111827);
  --muted: var(--dku-text-muted-color, #6b7280);
  --primary: var(--dku-primary-color, #2563eb);
  --chip: rgba(148, 163, 184, 0.18);
  --shadow: 0 18px 44px rgba(0, 0, 0, 0.20);
}

* { box-sizing: border-box; }
html, body { height: 100%; }

body {
  margin: 0;
  padding: 22px;
  font-family: var(--dku-font-family, "Open Sans", "Helvetica Neue", Arial, sans-serif);
  background:
    radial-gradient(1100px 680px at 10% 0%, rgba(37, 99, 235, 0.10), rgba(37, 99, 235, 0) 60%),
    radial-gradient(900px 540px at 95% 10%, rgba(16, 185, 129, 0.08), rgba(16, 185, 129, 0) 55%),
    var(--bg);
  color: var(--text);
}

.app {
  display: flex;
  flex-direction: column;
  gap: 12px;
  min-height: calc(100vh - 44px);
}

.app-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  gap: 14px;
  flex-wrap: wrap;
}

.title {
  margin: 0;
  font-size: 24px;
  font-weight: 900;
  letter-spacing: -0.02em;
}

.subtitle {
  margin-top: 6px;
  color: var(--muted);
  font-size: 13px;
  font-weight: 700;
  max-width: 84ch;
}

.meta-info {
  color: var(--muted);
  font-size: 12px;
  font-weight: 800;
  text-align: right;
}

.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.toolbar-left,
.toolbar-right {
  display: flex;
  align-items: center;
  gap: 10px;
  flex-wrap: wrap;
}

.pager { display: inline-flex; align-items: center; gap: 8px; }

.search {
  padding: 10px 12px;
  border-radius: 12px;
  border: 1px solid var(--border);
  width: 360px;
  max-width: 72vw;
  font-size: 14px;
  outline: none;
  background: var(--surface);
}

.search:focus {
  border-color: rgba(37, 99, 235, 0.6);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
}

.hint { color: var(--muted); font-size: 13px; }
.source-info { color: var(--muted); font-size: 12px; font-weight: 800; }

.card {
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: 16px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
  box-shadow: 0 12px 40px rgba(15, 23, 42, 0.06);
}

.card-title{
  padding: 10px 12px;
  border-bottom: 1px solid var(--border);
  background: rgba(148, 163, 184, 0.10);
  font-weight: 900;
  font-size: 13px;
}

.layout{
  display: grid;
  grid-template-columns: 1fr;
  gap: 12px;
  min-height: 0;
  flex: 1;
}

.layout-sidebar_filters{
  grid-template-columns: 280px 1fr;
}

.layout-master_detail{
  grid-template-columns: 1fr 360px;
}

@media (max-width: 980px){
  .layout-sidebar_filters, .layout-master_detail{ grid-template-columns: 1fr; }
}

.side, .detail{
  border: 1px solid var(--border);
  border-radius: 16px;
  background: var(--surface);
  padding: 12px;
  box-shadow: 0 12px 40px rgba(15, 23, 42, 0.06);
  height: fit-content;
}
.side-title, .detail-title{
  font-weight: 900;
  font-size: 13px;
  margin-bottom: 10px;
}
.side-filters{ display: flex; flex-direction: column; gap: 10px; }
.side-filters label{ font-weight: 900; font-size: 12px; color: var(--muted); }
.side-filters select{
  width: 100%;
  padding: 10px 10px;
  border-radius: 12px;
  border: 1px solid var(--border);
  background: var(--surface);
  font-size: 13px;
}

.tabs2{
  display: inline-flex;
  align-items:center;
  gap: 6px;
  padding: 6px;
  border-radius: 999px;
  border: 1px solid var(--border);
  background: rgba(148, 163, 184, 0.10);
  width: fit-content;
}
.tab2{
  border: 1px solid transparent;
  background: transparent;
  padding: 8px 10px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 900;
  color: var(--muted);
  cursor: pointer;
  line-height: 1;
}
.tab2.active{
  background: var(--surface);
  border-color: var(--border);
  color: var(--text);
  box-shadow: 0 1px 2px rgba(15, 23, 42, 0.10);
}
.tabpanel{ display:none; }
.tabpanel.active{ display:flex; flex-direction:column; }

.chart-wrap{ padding: 12px; }
.chart{ width:100%; overflow:auto; }

.table-wrap {
  width: 100%;
  overflow: auto;
  flex: 1;
  min-height: 0;
}

.data-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 13.5px;
}

.data-table thead th {
  text-align: left;
  padding: 10px 12px;
  background: var(--chip);
  border-bottom: 1px solid var(--border);
  position: sticky;
  top: 0;
  z-index: 1;
  white-space: nowrap;
  backdrop-filter: blur(6px);
}

.data-table tbody td {
  padding: 10px 12px;
  border-bottom: 1px solid var(--border);
  vertical-align: top;
}

.data-table tbody tr:hover { background: rgba(148, 163, 184, 0.10); }

.mono {
  font-variant-numeric: tabular-nums;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

.table-empty { color: var(--muted); font-size: 13px; }

.pill {
  padding: 4px 10px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 900;
  display: inline-flex;
  align-items: center;
  gap: 6px;
  border: 1px solid var(--border);
  background: rgba(148, 163, 184, 0.14);
  white-space: nowrap;
}

.pill.neutral { background: rgba(148, 163, 184, 0.14); color: var(--muted); }

.btn {
  padding: 8px 12px;
  border-radius: 12px;
  border: 1px solid var(--border);
  background: var(--surface);
  cursor: pointer;
  font-weight: 800;
  font-size: 13px;
  line-height: 1;
}

.btn:hover { background: rgba(148, 163, 184, 0.10); }
.btn:disabled { cursor: not-allowed; opacity: 0.65; }

.overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.35);
  display: none;
  align-items: center;
  justify-content: center;
  padding: 18px;
}

.overlay.visible { display: flex; }

.modal {
  width: min(980px, 96vw);
  max-height: min(740px, 92vh);
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: 18px;
  box-shadow: var(--shadow);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  padding: 14px 16px;
  border-bottom: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
}

.modal-title { font-weight: 900; font-size: 16px; }
.modal-subtitle { color: var(--muted); font-size: 12.5px; font-weight: 700; margin-top: 4px; }

.modal-body {
  padding: 16px;
  overflow: auto;
}

.kv {
  width: 100%;
  border-collapse: collapse;
  font-size: 13px;
}

.kv td {
  border-bottom: 1px solid var(--border);
  padding: 8px 10px;
  vertical-align: top;
}

.kv td.k {
  width: 260px;
  color: var(--muted);
  font-weight: 900;
  white-space: nowrap;
}

.toast {
  position: fixed;
  left: 50%;
  bottom: 18px;
  transform: translateX(-50%);
  background: rgba(15, 23, 42, 0.92);
  color: #fff;
  padding: 10px 12px;
  border-radius: 12px;
  font-weight: 800;
  font-size: 13px;
  border: 1px solid rgba(255, 255, 255, 0.12);
  opacity: 0;
  pointer-events: none;
  transition: opacity 160ms ease, transform 160ms ease;
}

.toast.show { opacity: 1; transform: translateX(-50%) translateY(-2px); }
